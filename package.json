{
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "ts-jest": "^29.4.1"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "npx http-server dist -p 3000",
    "dev": "concurrently \"npm run dev:ts\" \"npm run dev:sass\"",
    "dev:ts": "tsc --watch",
    "dev:sass": "sass src/styles:dist/styles --watch",
    "clear": "rimraf dist",
    "build": "npm run clear && concurrently \"npm run build:public\" \"npm run build:ts\" \"npm run build:sass\"",
    "build:public": "copyfiles -u 1 public/**/* dist",
    "build:ts": "tsc",
    "build:sass": "sass src/styles:dist/styles",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage"
  }
}
